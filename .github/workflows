name: Country-States-CSV-Converter

on:
  workflow_dispatch:
    inputs:
      country:
        description: "Enter country name (e.g., India, United States)"
        required: true
        default: "India"

jobs:
  fetch-and-save:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: "3.x"

      - run: pip install requests

      - name: Fetch states and save CSV
        run: python fetch_states.py "${{ github.event.inputs.country }}"

      - name: Move CSV into country directory
        run: |
          COUNTRY="${{ github.event.inputs.country }}"
          mkdir -p "$COUNTRY"
          mv states.csv "$COUNTRY/states.csv"
          ls -R .

      - name: Commit and Push
        run: |
          git config user.name "github-actions"
          git config user.email "actions@github.com"
          git add .
          git commit -m "Added states list for ${{ github.event.inputs.country }}"
          git push
